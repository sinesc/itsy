{
    "version": "2.0.0",
    "presentation": {
        "reveal": "always",
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo build (release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo run playground",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--features=\"compiler\"",
                "--features=\"debugging\"",
                "--bin",
                "playground"
            ],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo run bench (release)",
            "type": "shell",
            "command": "cargo",
