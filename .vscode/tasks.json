                "bench"
            ],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--features=\"compiler\"",
                "--bin",
