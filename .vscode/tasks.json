{
    "version": "2.0.0",
    "presentation": {
        "reveal": "always",
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "build: library",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": [],
            "hide": false,
        },
        {
            "label": "build: library (release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "group": "build",
            "problemMatcher": [],
            "hide": false,
        },
        {
            "label": "exec: tests",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                //"--no-fail-fast",
                "--features=\"ice_panics\"",
            ],
            "options": {
                "env": {
                    //"RUST_BACKTRACE": "1"
                }
            },
            "group": "test",
            "problemMatcher": [],
            "hide": false,
        },
        {
            "label": "build: itsyc (example)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--no-default-features",
                "--features=\"compiler\"",
                "--release",
                "--example",
                "itsyc"
            ],
            "group": "build",
            "problemMatcher": [],
            "hide": false,
        },
        {
            "label": "build: itsyvm (example)",
            "type": "shell",
