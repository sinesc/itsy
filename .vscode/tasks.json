{
    "version": "2.0.0",
    "presentation": {
        "reveal": "always",
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "cargo run file in debug-runner",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--features=\"compiler\"",
                "--features=\"debugging\"",
                "--bin",
                "debug-run",
                "--",
                "${relativeFile}"
            ],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo run file in runner",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--features=\"compiler\"",
                "--release",
                "--bin",
                "run",
                "--",
                "${relativeFile}"
            ],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo run bench",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--features=\"compiler\"",
                "--release",
                "--bin",
                "bench"
            ],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"/*,
                "--no-fail-fast"*/
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "cargo build library",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo build library (release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo clean",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "cargo update",
            "type": "shell",
            "command": "cargo",
            "args": [
                "update"
            ],
            "problemMatcher": []
        },
        {
            "label": "cargo rustdoc",
            "type": "shell",
            "command": "cargo",
            "args": [
                "rustdoc",
                "--open",
                //"--",
                //"--document-private-items",
            ],
            "problemMatcher": []
        },
        {
            "label": "cargo rustdoc (private)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "rustdoc",
                "--open",
                "--",
                "--document-private-items",
            ],
            "problemMatcher": []
        },
    ]
}