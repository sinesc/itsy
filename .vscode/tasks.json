            "group": "build",
            "problemMatcher": [],
            "hide": false,
        },
        {
            "label": "exec: run file in runner (example)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--release",
                "--example",
                "run",
                "--",
                "${relativeFile}"
            ],
            "group": "build",
            "problemMatcher": [],
            "hide": false,
